<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bacground"
    tools:context=".activity.AddressesActivity">

    <include layout="@layout/toolbar_addresses"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Address"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"/>
    <androidx.cardview.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/add_addreshome"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/addres1" />

                <View
                    android:layout_marginTop="5dp"
                    android:layout_width="2dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="50dp"
                    android:background="@color/bacground"
                    android:backgroundTint="@color/bacground" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:text="Add home addresss"/>
                <ImageView
                    android:layout_centerInParent="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/add_addres"/>

            </RelativeLayout>
            <View
                android:layout_marginEnd="25dp"
                android:layout_marginStart="25dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:backgroundTint="@color/bacground"
                android:background="@color/bacground"/>

            <RelativeLayout
                android:id="@+id/add_addrscity"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/addres2" />

                <View
                    android:layout_marginTop="5dp"
                    android:layout_width="2dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="50dp"
                    android:background="@color/bacground"
                    android:backgroundTint="@color/bacground" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:text="Add work addresss"/>
                <ImageView
                    android:layout_centerInParent="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/add_addres"/>

            </RelativeLayout>
            <View
                android:layout_marginEnd="25dp"
                android:layout_marginStart="25dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:backgroundTint="@color/bacground"
                android:background="@color/bacground"/>
            <RelativeLayout
                android:id="@+id/add_addrestown"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/addres3" />

                <View
                    android:layout_marginTop="5dp"
                    android:layout_width="2dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="50dp"
                    android:background="@color/bacground"
                    android:backgroundTint="@color/bacground" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:text="Add other addresss"/>
                <ImageView
                    android:layout_centerInParent="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/add_addres"/>

            </RelativeLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>